server {
    listen 80;

    location /api/ {
        proxy_pass http://auth:3002;
        proxy_set_header x-path api;

        rewrite ^/api(.*) $1 break;
    }

    location /users/ {
        proxy_pass http://auth:3002;
        proxy_set_header x-path users;
         rewrite ^/users(.*) $1 break;
    }

    location /auth/ {
        proxy_pass http://auth:3002;
        rewrite ^/auth(.*) $1 break;
    }

    location / {
        proxy_pass http://frontend:3000;
    }

}